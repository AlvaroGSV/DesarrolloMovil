<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactLayoutActivity">

    <ImageView
        android:id="@+id/contactImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth="300dp"
        app:layout_constraintHeight="300dp"
        android:layout_marginTop="55dp"
        tools:src="@drawable/stolas"/>

    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Stolas"
        android:textStyle="bold"
        android:textSize="36dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/contactImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/contactNumtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TELEFONO"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/contactName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/contactNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="666-666-6666"
        android:textStyle="normal"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/contactNumtxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/contactInsttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSTAGRAM"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/contactNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/contactInst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="hoothoot"
        android:textStyle="normal"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/contactInsttxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>